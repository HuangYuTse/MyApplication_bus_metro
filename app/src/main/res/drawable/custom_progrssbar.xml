<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/progress_background">
        <shape>
            <gradient
                android:startColor="#66bb6a"
                android:centerColor="#66bb6a"
                android:centerY="1.0"
                android:endColor="#66bb6a"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@+id/progress_progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#ff9100"
                    android:centerColor="#ff9100"
                    android:centerY="1.0"
                    android:endColor="#66bb6a"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>